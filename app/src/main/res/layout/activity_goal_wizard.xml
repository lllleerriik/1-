<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GoalWizard"
        android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/goalWizardLabel"
            tools:layout_editor_absoluteY="89dp"
            android:hint="Назовите цель"
            android:text="Name" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/goalWizardDescription"
            android:hint="Опишите цель"
            android:text="Description" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/goalWizardDate"
            android:hint="Выберите время"
            android:text="11.01.2014" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Удолить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalWizardDeleteButton"
                android:background="@drawable/basic_button"
                style="@style/base_button_style" />

        <Button
                android:text="Сохранить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalWizardSaveButton"
                android:background="@drawable/basic_button"
                style="@style/base_button_style" />
    </LinearLayout>

</LinearLayout>