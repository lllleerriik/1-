<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GoalWizard"
        android:orientation="vertical"
        android:gravity="center_vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/goalWizardLabel"
            android:hint="Какое название у Вашей цели?"
            android:layout_marginTop="50dp" />
    <!--    TODO extract to strings resources-->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Сохранить"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/goalWizardSaveButton"
                android:background="@drawable/basic_button"
                style="@style/base_button_style"
                android:layout_weight="1"
                android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>